<!DOCTYPE html>
<html>
  <head>
    <title>no go</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("no go","/") %>
      </div>
      <ul class="header-menus">
        
          
          
        <% if @current_user && @current_user.admin? %>
          <li>
            <%= link_to("投稿する（管理ユーザー）","/posts/new") %>
          </li>
        <% elsif @current_user %>
          <li>
            <%= "こんにちは、#{@current_user.name}さん" %>
          </li>
        <% else %>
          <li>
            <%= "こんにちは、ゲストさん" %>
          </li>
        <% end %>
          <li>
            <%= link_to("メニュー","/posts/index") %>
          </li>
        <% if @current_user %>
          <li>
            <%= link_to("ログアウト", "/logout", {method: :post}) %>
          </li>
        <% end %>
          <li>
            <%= link_to("ユーザー一覧","/users/index") %>
          </li>
          <li>
            <%= link_to("ユーザー登録","/users/new") %>
          </li>
        
          <li>
            <%= link_to("ログイン","/login") %>
          </li>
        <li>
          <%= link_to("お買い物カート","/carts/#{session[:cart_id]}") %>
        </li>
        
        

      </ul>
    </header>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <%= yield %>
  </body>
</html>
